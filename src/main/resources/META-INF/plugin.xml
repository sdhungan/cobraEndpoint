<idea-plugin>
    <id>com.monkops.cobraendpointstructure</id>
    <name>Cobra Endpoint Structure</name>
    <vendor>MonkOps</vendor>

    <description><![CDATA[
        Provides a Structure-like tool window that shows Echo framework endpoints
        grouped by route groups for the currently open Go file or entire directory.
    ]]></description>

    <!-- Base platform -->
    <depends>com.intellij.modules.platform</depends>

    <!-- GoLand-only -->
    <depends>com.intellij.modules.goland</depends>

    <!-- Go plugin APIs / Go PSI -->
    <depends>org.jetbrains.plugins.go</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
                id="com.monkops.cobraendpointstructure.toolwindow"
                anchor="right"
                secondary="true"
                factoryClass="com.monkops.cobraendpointstructure.CobraEndpointStructureToolWindowFactory"/>
    </extensions>
</idea-plugin>
