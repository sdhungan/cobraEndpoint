<idea-plugin>
    <id>com.monkops.cobraendpointstructure</id>
    <name>Cobra Endpoint Structure</name>
    <vendor>MonkOps</vendor>

    <description><![CDATA[
        Provides a Structure-like tool window that shows Echo framework endpoints
        grouped by route groups for the currently open Go file.
    ]]></description>

    <!-- Explicit module dependency: THIS makes it GoLand-compatible -->
    <depends>com.intellij.modules.platform</depends>


    <!-- You still need this for Go PSI / Go plugin APIs -->
    <depends>org.jetbrains.plugins.go</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
                id="Cobra Endpoint Structure"
                anchor="right"
                secondary="true"
                factoryClass="com.monkops.cobraendpointstructure.CobraEndpointStructureToolWindowFactory"/>
    </extensions>
</idea-plugin>
